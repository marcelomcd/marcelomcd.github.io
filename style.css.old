/* ========== ANIMAÇÕES DE ENTRADA ========== */
.fade-in {
  opacity: 0;
  transform: translateY(40px);
  transition: opacity 0.8s cubic-bezier(0.4, 0, 0.2, 1),
    transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}
.fade-in.in-view {
  opacity: 1;
  transform: translateY(0);
}
/* ========== TEMA TOGGLE ========== */
.theme-toggle {
  background: var(--glass);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-sm);
  color: var(--accent);
  font-size: 1.3rem;
  width: 44px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 1rem;
  transition: var(--transition);
}
.theme-toggle:hover {
  background: var(--card-hover);
  color: var(--purple);
  border-color: var(--accent);
}

/* ===========================================
   MARCELO MACEDO - PORTFOLIO 2025
   Modern Professional Portfolio
   =========================================== */

:root {
  --bg: #0b0f14;
  --bg-elevated: #0f1720;
  --card: #141d29;
  --card-hover: #1a2532;
  --text: #e6eef6;
  --text-muted: #94a3b8;
  --text-dim: #64748b;
  --accent: #00d4ff;
  --accent-hover: #00b8e6;
  --purple: #7000ff;
  --glass: rgba(255, 255, 255, 0.03);
  --glass-border: rgba(255, 255, 255, 0.08);
  --radius: 16px;
  --radius-sm: 12px;
  --spacing-xs: 0.5rem;
  --spacing-sm: 1rem;
  --spacing-md: 1.5rem;
  --spacing-lg: 2rem;
  --spacing-xl: 3rem;
  --spacing-2xl: 4rem;
  --max-width: 1200px;
  --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.light-theme {
  --bg: #f7f8fa;
  --bg-elevated: #ffffff;
  --card: #f0f2f5;
  --card-hover: #e4e7ec;
  --text: #222c3a;
  --text-muted: #6b7c93;
  --text-dim: #b8c5d6;
  --accent: #00d4ff;
  --accent-hover: #7000ff;
  --purple: #7000ff;
  --glass: rgba(0, 0, 0, 0.03);
  --glass-border: rgba(0, 0, 0, 0.08);
}

/* ========== RESET & BASE ========== */
*,
*::before,
*::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html {
  scroll-behavior: smooth;
}

body {
  font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI",
    sans-serif;
  background: var(--bg);
  color: var(--text);
  line-height: 1.7;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  overflow-x: hidden;
}

a {
  text-decoration: none;
  color: inherit;
  transition: var(--transition);
}

img {
  max-width: 100%;
  display: block;
}

button {
  border: none;
  background: none;
  cursor: pointer;
  font-family: inherit;
}

.container {
  max-width: var(--max-width);
  margin: 0 auto;
  padding: 0 var(--spacing-lg);
  position: relative;
  z-index: 1;
}

.section-padding {
  padding: var(--spacing-2xl) 0;
}

/* ========== PARTICLES BACKGROUND ========== */
.particles-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  pointer-events: none;
  background: radial-gradient(
      circle at 20% 30%,
      rgba(0, 212, 255, 0.05) 0%,
      transparent 50%
    ),
    radial-gradient(
      circle at 80% 70%,
      rgba(112, 0, 255, 0.05) 0%,
      transparent 50%
    ),
    radial-gradient(
      circle at 50% 50%,
      rgba(0, 212, 255, 0.02) 0%,
      transparent 70%
    );
  animation: particlesFloat 20s linear infinite;
}

@keyframes particlesFloat {
  0% {
    background-position: 0% 0%, 0% 0%, 0% 0%;
  }
  100% {
    background-position: 100% 100%, -100% 100%, 50% -50%;
  }
}

/* ========== CONTAINER ========== */
.container {
  max-width: var(--max-width);
  margin: 0 auto;
  padding: 0 var(--spacing-lg);
  position: relative;
  z-index: 1;
}

/* ========== HEADER & NAVIGATION ========== */
.site-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  backdrop-filter: blur(20px) saturate(180%);
  background: rgba(11, 15, 20, 0.7);
  border-bottom: 1px solid var(--glass-border);
  transition: var(--transition);
}

.site-header.scrolled {
  background: rgba(11, 15, 20, 0.9);
  box-shadow: 0 4px 30px rgba(0, 0, 0, 0.3);
}

.nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-md) 0;
}

.logo {
  font-size: 1.5rem;
  font-weight: 700;
  background: linear-gradient(135deg, var(--accent), var(--purple));
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  transition: var(--transition);
}

.logo:hover {
  transform: scale(1.05);
}

.nav-list {
  display: flex;
  gap: var(--spacing-lg);
  list-style: none;
}
.nav-list a {
  color: var(--text-muted);
  font-weight: 500;
  font-size: 0.95rem;
  padding: 0.5rem 1rem;
  border-radius: var(--radius-sm);
  transition: var(--transition);
  position: relative;
}
.nav-list a::before {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 2px;
  background: linear-gradient(90deg, var(--accent), var(--purple));
  transition: width 0.3s ease;
}
.nav-list a:hover,
.nav-list a.active {
  color: var(--text);
}
.nav-list a:hover::before,
.nav-list a.active::before {
  width: 80%;
}

.nav-toggle {
  display: none;
  flex-direction: column;
  gap: 5px;
  padding: 0.5rem;
  cursor: pointer;
}

/* Mobile menu behavior */
@media (max-width: 900px) {
  .nav-list {
    position: fixed;
    top: 64px;
    right: 16px;
    left: 16px;
    flex-direction: column;
    gap: 0.5rem;
    background: var(--bg-elevated);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius);
    padding: 1rem;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.35);
    transform-origin: top right;
    transform: scale(0.98);
    opacity: 0;
    pointer-events: none;
    transition: var(--transition);
  }
  .nav-list.active {
    opacity: 1;
    transform: scale(1);
    pointer-events: all;
  }
  .nav-toggle {
    display: flex;
  }
}

/* HERO */
.hero {
  padding-top: 120px;
  position: relative;
}
.hero-container {
  display: grid;
  grid-template-columns: 1.1fr 0.9fr;
  align-items: center;
  gap: var(--spacing-2xl);
}
@media (max-width: 1000px) {
  .hero-container {
    grid-template-columns: 1fr;
  }
}
.hero-title {
  font-size: clamp(2rem, 4vw, 3.25rem);
  line-height: 1.15;
  margin: 0 0 var(--spacing-md);
}
.gradient-text {
  background: linear-gradient(135deg, var(--accent), var(--purple));
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}
.hero-subtitle {
  color: var(--text-muted);
  margin-bottom: var(--spacing-sm);
}
.hero-description {
  color: var(--text-dim);
  margin-bottom: var(--spacing-lg);
}
.hero-buttons {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
}

/* Buttons */
.btn {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.9rem 1.2rem;
  border-radius: 12px;
  font-weight: 600;
  transition: var(--transition);
}
.btn-primary {
  background: linear-gradient(135deg, var(--accent), var(--purple));
  color: #0b0f14;
}
.btn-primary:hover {
  filter: brightness(1.05);
  transform: translateY(-1px);
}
.btn-outline {
  border: 1px solid var(--glass-border);
  background: var(--glass);
  color: var(--text);
}
.btn-outline:hover {
  background: var(--card-hover);
  border-color: var(--accent);
}

/* Code window */
.code-window {
  background: var(--bg-elevated);
  border: 1px solid var(--glass-border);
  border-radius: 14px;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.35);
  overflow: hidden;
}
.window-header {
  display: flex;
  gap: 8px;
  padding: 10px;
  background: linear-gradient(
    180deg,
    rgba(255, 255, 255, 0.04),
    rgba(255, 255, 255, 0.02)
  );
  border-bottom: 1px solid var(--glass-border);
}
.dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  display: inline-block;
}
.dot-red {
  background: #ff5f56;
}
.dot-yellow {
  background: #ffbd2e;
}
.dot-green {
  background: #27c93f;
}
.window-body {
  padding: 16px 18px;
  font-family: "JetBrains Mono", ui-monospace, monospace;
  font-size: 0.9rem;
  color: var(--text-dim);
}
.window-body .code-keyword {
  color: #c792ea;
}
.code-class {
  color: #82aaff;
}
.code-function {
  color: #c3e88d;
}
.code-param {
  color: #f78c6c;
}
.code-string {
  color: #ecc48d;
}

/* Cards e seções */
.glass-card {
  background: var(--bg-elevated);
  border: 1px solid var(--glass-border);
  border-radius: 16px;
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.25);
}
.section-header {
  text-align: center;
  margin-bottom: var(--spacing-xl);
}
.section-label {
  color: var(--accent);
  font-weight: 700;
  letter-spacing: 0.08em;
  text-transform: uppercase;
  font-size: 0.8rem;
}
.section-title {
  font-size: clamp(1.6rem, 3vw, 2.2rem);
}

/* Timeline */
.timeline {
  position: relative;
  margin-left: 12px;
  padding-left: 24px;
}
.timeline::before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 2px;
  background: linear-gradient(180deg, var(--accent), transparent);
  opacity: 0.4;
}
.timeline-item {
  position: relative;
  margin-bottom: var(--spacing-lg);
}
.timeline-marker {
  position: absolute;
  left: -12px;
  top: 10px;
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: var(--accent);
  box-shadow: 0 0 0 4px rgba(0, 212, 255, 0.15);
}
.timeline-content {
  padding: var(--spacing-lg);
}
.timeline-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 1rem;
  margin-bottom: 0.75rem;
}
.timeline-tags .tag {
  display: inline-block;
  padding: 0.3rem 0.6rem;
  margin: 0.25rem;
  border-radius: 999px;
  background: var(--glass);
  border: 1px solid var(--glass-border);
  color: var(--text-muted);
  font-size: 0.8rem;
}

/* About */
.about-grid {
  display: grid;
  grid-template-columns: 1fr 1.2fr;
  gap: var(--spacing-xl);
  align-items: start;
}
@media (max-width: 1000px) {
  .about-grid {
    grid-template-columns: 1fr;
  }
}
.profile-frame {
  position: relative;
  width: 100%;
  display: flex;
  justify-content: center;
}
.profile-img {
  width: 100%;
  max-width: 320px;
  aspect-ratio: 1/1;
  object-fit: cover;
  border-radius: 50%;
  border: 6px solid rgba(255, 255, 255, 0.06);
}
.profile-ring {
  position: absolute;
  width: calc(100% + 18px);
  height: calc(100% + 18px);
  border-radius: 50%;
  border: 2px solid rgba(255, 255, 255, 0.08);
  box-shadow: inset 0 0 40px rgba(0, 212, 255, 0.12);
}

/* Hero details */
.hero-label {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  background: var(--glass);
  border: 1px solid var(--glass-border);
  border-radius: 999px;
  color: var(--accent);
  font-size: 0.85rem;
  font-weight: 600;
  margin-bottom: var(--spacing-md);
}
.hero-social {
  display: flex;
  gap: 0.75rem;
  margin-top: var(--spacing-lg);
}
.hero-social .social-link {
  width: 44px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--glass);
  border: 1px solid var(--glass-border);
  border-radius: 10px;
  color: var(--text-muted);
  font-size: 1.1rem;
  transition: var(--transition);
}
.hero-social .social-link:hover {
  background: var(--card-hover);
  border-color: var(--accent);
  color: var(--accent);
  transform: translateY(-2px);
}
.scroll-indicator {
  position: absolute;
  bottom: 2rem;
  left: 50%;
  transform: translateX(-50%);
  color: var(--text-dim);
  font-size: 1.5rem;
  animation: bounce 2s infinite;
}
@keyframes bounce {
  0%,
  100% {
    transform: translateX(-50%) translateY(0);
  }
  50% {
    transform: translateX(-50%) translateY(-10px);
  }
}

/* About content */
.about-content {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}
.about-text {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}
.lead-text {
  font-size: 1.15rem;
  color: var(--text);
  line-height: 1.7;
}
.about-card {
  padding: var(--spacing-lg);
}
.quick-stats {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1rem;
  margin-top: var(--spacing-md);
}
.stat-item {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  font-size: 0.9rem;
}
.stat-item i {
  color: var(--accent);
  font-size: 1.5rem;
}
.stat-item strong {
  display: block;
  font-size: 1.25rem;
  color: var(--text);
  margin-bottom: 0.15rem;
}
.stat-item span {
  color: var(--text-muted);
  font-size: 0.85rem;
}
.info-cards {
  display: grid;
  gap: 0.75rem;
  margin-top: var(--spacing-md);
}
.info-card {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem 1.25rem;
  background: var(--glass);
  border: 1px solid var(--glass-border);
  border-radius: 12px;
}
.info-card i {
  color: var(--accent);
  font-size: 1.35rem;
}
.info-card strong {
  display: block;
  margin-bottom: 0.2rem;
  font-size: 0.95rem;
}
.info-card span {
  color: var(--text-muted);
  font-size: 0.9rem;
}
.btn-download {
  margin-top: var(--spacing-md);
  align-self: flex-start;
}

/* Experience */
.bg-dark {
  background: linear-gradient(180deg, var(--bg), var(--bg-elevated));
}
.timeline-header h3 {
  font-size: 1.15rem;
  margin-bottom: 0.25rem;
}
.timeline-header h4 {
  color: var(--text-muted);
  font-weight: 500;
  font-size: 0.95rem;
}
.timeline-date {
  color: var(--text-dim);
  font-size: 0.85rem;
  white-space: nowrap;
}
.timeline-date i {
  margin-right: 0.35rem;
}
.timeline-achievements {
  list-style: none;
  display: flex;
  flex-direction: column;
  gap: 0.6rem;
  margin-bottom: var(--spacing-md);
}
.timeline-achievements li {
  display: flex;
  align-items: flex-start;
  gap: 0.65rem;
  color: var(--text-muted);
  line-height: 1.6;
}
.timeline-achievements i {
  color: var(--accent);
  margin-top: 0.2rem;
  font-size: 0.9rem;
}

/* Certifications */
.certifications {
  margin-top: var(--spacing-2xl);
}
.subsection-title {
  display: flex;
  align-items: center;
  gap: 0.6rem;
  font-size: 1.35rem;
  margin-bottom: var(--spacing-md);
}
.subsection-title i {
  color: var(--accent);
}
.cert-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 1.25rem;
}
.cert-card {
  padding: 1.5rem;
  text-align: center;
}
.cert-icon {
  width: 60px;
  height: 60px;
  margin: 0 auto var(--spacing-md);
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(
    135deg,
    rgba(0, 212, 255, 0.1),
    rgba(112, 0, 255, 0.1)
  );
  border-radius: 50%;
  color: var(--accent);
  font-size: 1.75rem;
}
.cert-card h4 {
  margin-bottom: 0.35rem;
  font-size: 1.05rem;
}
.cert-card p {
  color: var(--text-muted);
  margin-bottom: 0.5rem;
}
.cert-year {
  display: inline-block;
  padding: 0.25rem 0.75rem;
  background: var(--glass);
  border: 1px solid var(--glass-border);
  border-radius: 999px;
  color: var(--accent);
  font-size: 0.8rem;
  font-weight: 600;
}

/* Skills, Projects, Contact */
.skill-category,
.project-card,
.contact-grid {
  opacity: 1;
  transition: opacity 0.5s ease, transform 0.5s ease;
}
[data-anim] {
  opacity: 0;
  transform: translateY(30px);
  transition: opacity 0.7s cubic-bezier(0.4, 0, 0.2, 1),
    transform 0.7s cubic-bezier(0.4, 0, 0.2, 1);
}
[data-anim].in-view {
  opacity: 1;
  transform: translateY(0);
}

/* Responsividade adicional */
@media (max-width: 768px) {
  .hero-container {
    grid-template-columns: 1fr;
    gap: var(--spacing-lg);
  }
  .about-grid {
    grid-template-columns: 1fr;
  }
  .quick-stats {
    grid-template-columns: 1fr;
  }
  .timeline-header {
    flex-direction: column;
    align-items: flex-start;
  }
  .timeline-date {
    margin-top: 0.25rem;
  }
}

/* About image legacy */
.about-image img {
  width: 100%;
  height: auto;
  display: block;
  border-radius: var(--radius);
}

.about-content h3 {
  font-size: 1.8rem;
  margin-bottom: var(--spacing-md);
  color: var(--accent);
}

.about-content p {
  color: var(--text-muted);
  margin-bottom: var(--spacing-md);
  line-height: 1.8;
}

.about-stats {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--spacing-md);
  margin-top: var(--spacing-lg);
}

.stat-card {
  background: var(--glass);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-sm);
  padding: var(--spacing-md);
  text-align: center;
  transition: var(--transition);
}

.stat-card:hover {
  background: var(--card);
  border-color: var(--accent);
  transform: translateY(-5px);
}

.stat-number {
  font-size: 2rem;
  font-weight: 700;
  color: var(--accent);
  display: block;
  margin-bottom: 0.5rem;
}

.stat-label {
  color: var(--text-muted);
  font-size: 0.9rem;
}

/* ========== EXPERIENCE TIMELINE ========== */
.timeline {
  position: relative;
  max-width: 900px;
  margin: 0 auto;
  padding: var(--spacing-lg) 0;
}

.timeline::before {
  content: "";
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  width: 2px;
  height: 100%;
  background: linear-gradient(180deg, transparent, var(--accent), transparent);
}

.timeline-item {
  margin-bottom: var(--spacing-xl);
  position: relative;
  opacity: 0;
  transform: translateY(30px);
  transition: var(--transition);
}

.timeline-item.visible {
  opacity: 1;
  transform: translateY(0);
}

.timeline-item:nth-child(odd) {
  padding-right: calc(50% + 40px);
}

.timeline-item:nth-child(even) {
  padding-left: calc(50% + 40px);
}

.timeline-dot {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 20px;
  height: 20px;
  background: var(--accent);
  border: 4px solid var(--bg);
  border-radius: 50%;
  box-shadow: 0 0 20px rgba(0, 212, 255, 0.6);
  z-index: 2;
}

.timeline-content {
  background: var(--glass);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius);
  padding: var(--spacing-lg);
  transition: var(--transition);
  backdrop-filter: blur(10px);
}

.timeline-content:hover {
  background: var(--card);
  border-color: var(--accent);
  transform: scale(1.02);
}

.timeline-date {
  display: inline-block;
  padding: 0.4rem 1rem;
  background: linear-gradient(135deg, var(--accent), var(--purple));
  color: white;
  border-radius: 20px;
  font-size: 0.85rem;
  font-weight: 600;
  margin-bottom: var(--spacing-sm);
}

.timeline-content h3 {
  font-size: 1.4rem;
  margin-bottom: 0.5rem;
  color: var(--text);
}

.timeline-content h4 {
  color: var(--accent);
  font-size: 1.1rem;
  margin-bottom: var(--spacing-md);
  font-weight: 500;
}

.timeline-content p,
.timeline-content ul {
  color: var(--text-muted);
  line-height: 1.8;
}

.timeline-content ul {
  list-style: none;
  margin-top: var(--spacing-sm);
}

.timeline-content ul li {
  padding-left: 1.5rem;
  position: relative;
  margin-bottom: 0.5rem;
}

.timeline-content ul li::before {
  content: "▹";
  position: absolute;
  left: 0;
  color: var(--accent);
}

/* ========== SKILLS SECTION ========== */
.skills-categories {
  display: grid;
  gap: var(--spacing-lg);
  max-width: 1000px;
  margin: 0 auto;
}

.skill-category {
  background: var(--glass);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius);
  padding: var(--spacing-lg);
  transition: var(--transition);
  opacity: 0;
  transform: translateY(20px);
}

.skill-category.visible {
  opacity: 1;
  transform: translateY(0);
}

.skill-category:hover {
  background: var(--card);
  border-color: var(--accent);
}

.skill-category h3 {
  font-size: 1.3rem;
  margin-bottom: var(--spacing-md);
  color: var(--accent);
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.skill-category h3 i {
  font-size: 1.5rem;
}

.skills-list {
  display: grid;
  gap: var(--spacing-md);
}

.skill-item {
  position: relative;
}

.skill-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 0.5rem;
}

.skill-name {
  color: var(--text);
  font-weight: 500;
}

.skill-level {
  color: var(--text-muted);
  font-size: 0.9rem;
}

.skill-bar {
  height: 8px;
  background: var(--bg-elevated);
  border-radius: 10px;
  overflow: hidden;
  position: relative;
}

.skill-progress {
  height: 100%;
  background: linear-gradient(90deg, var(--accent), var(--purple));
  border-radius: 10px;
  width: 0;
  transition: width 1s ease-out;
  box-shadow: 0 0 10px rgba(0, 212, 255, 0.5);
}

.skill-item.visible .skill-progress {
  width: var(--progress);
}

/* ========== PROJECTS SECTION ========== */
.projects-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: var(--spacing-lg);
  margin-top: var(--spacing-xl);
}

.project-card {
  background: var(--glass);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius);
  overflow: hidden;
  transition: var(--transition);
  opacity: 0;
  transform: translateY(30px);
  cursor: pointer;
}

.project-card.visible {
  opacity: 1;
  transform: translateY(0);
}

.project-card:hover {
  transform: translateY(-10px);
  border-color: var(--accent);
  box-shadow: 0 15px 40px rgba(0, 212, 255, 0.2);
}

.project-image {
  width: 100%;
  height: 200px;
  background: var(--card);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  position: relative;
}

.project-image i {
  font-size: 4rem;
  color: var(--accent);
  opacity: 0.3;
}

.project-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.project-content {
  padding: var(--spacing-lg);
}

.project-content h3 {
  font-size: 1.4rem;
  margin-bottom: var(--spacing-sm);
  color: var(--text);
}

.project-content p {
  color: var(--text-muted);
  line-height: 1.7;
  margin-bottom: var(--spacing-md);
}

.project-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  margin-bottom: var(--spacing-md);
}

.tag {
  padding: 0.3rem 0.8rem;
  background: var(--bg-elevated);
  border: 1px solid var(--glass-border);
  border-radius: 20px;
  font-size: 0.8rem;
  color: var(--text-muted);
  transition: var(--transition);
}

.tag:hover {
  background: var(--accent);
  color: white;
  border-color: var(--accent);
}

.project-links {
  display: flex;
  gap: var(--spacing-sm);
}

.project-link {
  flex: 1;
  padding: 0.7rem;
  background: var(--glass);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-sm);
  text-align: center;
  color: var(--text-muted);
  transition: var(--transition);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
}

.project-link:hover {
  background: var(--accent);
  color: white;
  border-color: var(--accent);
}

/* ========== CONTACT SECTION ========== */
.contact-grid {
  display: grid;
  grid-template-columns: 1fr 1.5fr;
  gap: var(--spacing-xl);
  max-width: 1000px;
  margin: 0 auto;
}

.contact-info h3 {
  font-size: 1.8rem;
  margin-bottom: var(--spacing-md);
  color: var(--accent);
}

.contact-info p {
  color: var(--text-muted);
  line-height: 1.8;
  margin-bottom: var(--spacing-lg);
}

.contact-methods {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.contact-method {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  padding: var(--spacing-md);
  background: var(--glass);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-sm);
  transition: var(--transition);
}

.contact-method:hover {
  background: var(--card);
  border-color: var(--accent);
  transform: translateX(10px);
}

.contact-icon {
  width: 50px;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, var(--accent), var(--purple));
  border-radius: var(--radius-sm);
  color: white;
  font-size: 1.3rem;
  flex-shrink: 0;
}

.contact-details h4 {
  color: var(--text);
  margin-bottom: 0.3rem;
  font-size: 1rem;
}

.contact-details a,
.contact-details p {
  color: var(--text-muted);
  font-size: 0.95rem;
}

.contact-details a:hover {
  color: var(--accent);
}

.contact-form {
  background: var(--glass);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius);
  padding: var(--spacing-lg);
  backdrop-filter: blur(10px);
}

.form-group {
  margin-bottom: var(--spacing-md);
}

.form-group label {
  display: block;
  margin-bottom: 0.5rem;
  color: var(--text);
  font-weight: 500;
}

.form-group input,
.form-group textarea {
  width: 100%;
  padding: 1rem;
  background: var(--bg-elevated);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-sm);
  color: var(--text);
  font-family: inherit;
  font-size: 1rem;
  transition: var(--transition);
}

.form-group input:focus,
.form-group textarea:focus {
  outline: none;
  border-color: var(--accent);
  box-shadow: 0 0 0 3px rgba(0, 212, 255, 0.1);
}

.form-group textarea {
  resize: vertical;
  min-height: 150px;
}

.form-group input::placeholder,
.form-group textarea::placeholder {
  color: var(--text-dim);
}

.btn-submit {
  width: 100%;
  padding: 1rem;
  background: linear-gradient(135deg, var(--accent), var(--purple));
  color: white;
  border: none;
  border-radius: var(--radius-sm);
  font-weight: 600;
  font-size: 1rem;
  cursor: pointer;
  transition: var(--transition);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
}

.btn-submit:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0, 212, 255, 0.3);
}

/* ========== FOOTER ========== */
.site-footer {
  background: var(--bg-elevated);
  border-top: 1px solid var(--glass-border);
  padding: var(--spacing-xl) 0 var(--spacing-lg);
  margin-top: var(--spacing-2xl);
}

.footer-content {
  display: grid;
  grid-template-columns: 1.5fr 1fr 1fr;
  gap: var(--spacing-xl);
  margin-bottom: var(--spacing-lg);
}

.footer-about h3 {
  font-size: 1.5rem;
  background: linear-gradient(135deg, var(--accent), var(--purple));
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: var(--spacing-sm);
}

.footer-about p {
  color: var(--text-muted);
  line-height: 1.8;
  margin-bottom: var(--spacing-md);
}

.footer-links h4,
.footer-contact h4 {
  color: var(--text);
  margin-bottom: var(--spacing-md);
  font-size: 1.1rem;
}

.footer-links ul {
  list-style: none;
}

.footer-links li {
  margin-bottom: 0.7rem;
}

.footer-links a {
  color: var(--text-muted);
  transition: var(--transition);
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
}

.footer-links a:hover {
  color: var(--accent);
  transform: translateX(5px);
}

.footer-contact p {
  color: var(--text-muted);
  margin-bottom: 0.7rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.footer-contact i {
  color: var(--accent);
  width: 20px;
}

.footer-bottom {
  text-align: center;
  padding-top: var(--spacing-lg);
  border-top: 1px solid var(--glass-border);
  color: var(--text-muted);
  font-size: 0.9rem;
}

/* ========== SCROLL TO TOP ========== */
.scroll-top {
  position: fixed;
  bottom: 2rem;
  right: 2rem;
  width: 50px;
  height: 50px;
  background: linear-gradient(135deg, var(--accent), var(--purple));
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.3rem;
  cursor: pointer;
  opacity: 0;
  visibility: hidden;
  transition: var(--transition);
  z-index: 999;
  box-shadow: 0 4px 15px rgba(0, 212, 255, 0.3);
}

.scroll-top.visible {
  opacity: 1;
  visibility: visible;
}

.scroll-top:hover {
  transform: translateY(-5px);
  box-shadow: 0 6px 25px rgba(0, 212, 255, 0.5);
}

/* ========== ANIMATIONS ========== */
.fade-in {
  animation: fadeIn 0.6s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ========== RESPONSIVE DESIGN ========== */

@media (max-width: 968px) {
  .hero-container {
    grid-template-columns: 1fr;
    gap: var(--spacing-lg);
  }

  .code-window {
    order: -1;
  }

  .about-grid {
    grid-template-columns: 1fr;
    gap: var(--spacing-lg);
  }

  .about-image-container {
    max-width: 350px;
    margin: 0 auto;
  }

  .timeline::before {
    left: 30px;
  }

  .timeline-item:nth-child(odd),
  .timeline-item:nth-child(even) {
    padding-left: 70px;
    padding-right: 0;
  }

  .timeline-dot {
    left: 30px;
  }

  .contact-grid {
    grid-template-columns: 1fr;
  }

  .footer-content {
    grid-template-columns: 1fr;
    gap: var(--spacing-lg);
  }
}

@media (max-width: 768px) {
  :root {
    --spacing-2xl: 3rem;
    --spacing-xl: 2rem;
  }

  .nav-links {
    position: fixed;
    top: 70px;
    left: 0;
    right: 0;
    flex-direction: column;
    background: rgba(11, 15, 20, 0.98);
    padding: var(--spacing-lg);
    gap: 0;
    transform: translateY(-100%);
    opacity: 0;
    visibility: hidden;
    transition: var(--transition);
    border-bottom: 1px solid var(--glass-border);
  }

  .nav-links.active {
    transform: translateY(0);
    opacity: 1;
    visibility: visible;
  }

  .nav-links li {
    width: 100%;
    text-align: center;
    border-bottom: 1px solid var(--glass-border);
  }

  .nav-links li:last-child {
    border-bottom: none;
  }

  .nav-links a {
    display: block;
    padding: 1rem;
  }

  .mobile-menu-toggle {
    display: flex;
  }

  .mobile-menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .mobile-menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
  }

  .hero-content h1 {
    font-size: 2.5rem;
  }

  .typing-text {
    font-size: 1.2rem;
  }

  .about-stats {
    grid-template-columns: 1fr;
  }

  .projects-grid {
    grid-template-columns: 1fr;
  }

  .scroll-top {
    bottom: 1rem;
    right: 1rem;
    width: 45px;
    height: 45px;
  }
}

@media (max-width: 480px) {
  .container {
    padding: 0 var(--spacing-md);
  }

  .hero-cta {
    flex-direction: column;
  }

  .btn {
    width: 100%;
    justify-content: center;
  }

  .social-links {
    justify-content: center;
  }

  .stat-number {
    font-size: 1.5rem;
  }

  .section-title {
    font-size: 1.8rem;
  }

  .timeline-item:nth-child(odd),
  .timeline-item:nth-child(even) {
    padding-left: 50px;
  }

  .timeline-dot {
    left: 20px;
    width: 16px;
    height: 16px;
  }

  .timeline::before {
    left: 20px;
  }
}
