# EditorConfig — https://editorconfig.org
# Garante consistência de formatação independente do editor ou plugin

root = true

# Regra padrão para todos os arquivos
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# JavaScript e TypeScript
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2
max_line_length = 100

# JSON
[*.{json,jsonc}]
indent_size = 2

# HTML
[*.{html,htm}]
indent_size = 2

# CSS, SCSS, Tailwind
[*.{css,scss,less}]
indent_size = 2

# Markdown — preserva trailing whitespace (usado para quebra de linha)
[*.{md,mdx,mdc}]
trim_trailing_whitespace = false
indent_size = 2

# YAML (CI/CD, configs)
[*.{yml,yaml}]
indent_size = 2

# Python (quando aplicável)
[*.py]
indent_size = 4
max_line_length = 88

# Makefiles precisam de tab
[Makefile]
indent_style = tab

# Scripts shell
[*.{sh,bash,bat}]
end_of_line = lf
